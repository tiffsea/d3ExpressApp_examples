<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='javascript' href="/javascripts/d3/d3.js" />
  </head>
  <body>
    <h1><%= title %></h1>
    <h2>Welcome to <%= title %></h2>
    
    <script>
      var width=600, height=400, radius=8;

      var svg = d3.select("body")
        .append("svg:svg")
          .attr("width", width)
          .attr("height", height);

      const DATA = <%= data %>

      // render the circles
      d3.max(DATA, function(d){
        svg.append("circle")
          .attr("cx", d[0])
          .attr("cy", d[1])
          .attr("r", radius)
          .style("fill", "red");
      });

      // display the coordinates
      svg.selectAll("text")
        .data(DATA)
        .enter()
        .append("text")
        .text(function(d) {
          return d[0] + " , " + d[1];
        })
        .attr("x", function(d) {
          return d[0];
        })
        .attr("y", function(d) {
          return d[1];
        })
        .attr("font-family", "sans-serif")
        .attr("font-size",  "11px")
        .attr("fill", "blue");
      
    </script>
  </body>
</html>